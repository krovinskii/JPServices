---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

interface Props {
    title?: string;
    description?: string;
}

const {
    title = "JP Services",
    description = "Expert construction and home improvement services in Navasota, TX",
} = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <meta name="description" content={description} />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title} | Navasota Construction</title>
    </head>
    <body>
        <div class="page-wrapper">
            <Header />
            <main>
                <slot />
            </main>
            <Footer />
        </div>
    </body>
</html>

<style>
    html,
    body {
        margin: 0;
        width: 100%;
        height: 100%;
    }
</style>
