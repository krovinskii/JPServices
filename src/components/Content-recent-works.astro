---
import { Image } from "astro:assets";
import DeckWork from "../assets/deckwork.jpg";
import FenceWork from "../assets/fencework.webp";
import Fence2 from "../assets/fence2.jpg";
import Fence3 from "../assets/fence3.webp";
import Fence4 from "../assets/fence4.jpg";
import Deck2 from "../assets/deck2.jpeg";
import Deck3 from "../assets/deck3.jpeg";
import Deck4 from "../assets/deck4.jpeg";
import Pergola1 from "../assets/pergola1.webp";
import Patio1 from "../assets/patiocover1.jpeg";
import Patio2 from "../assets/patiocover2.jpeg";
import Patio3 from "../assets/patiocover3.jpeg";
import Landscape1 from "../assets/landscape1.webp";
import Landscape2 from "../assets/landscape2.jpeg";
import Landscape3 from "../assets/landscape3.jpeg";
import Landscape4 from "../assets/landscape4.jpg";
---

<script src="../js/persistantClick.js"></script>
<script src="../js/landingGallery.js"></script>
<section class="content-recent-works">
    <div class="content-recent-works-container">
        <h3>Recent Projects</h3>
        <div class="content-recent-works-nav-img-container">
            <div class="recent-works-navbar">
                <ul>
                    <li id="btn-all" class="rw-all">
                        <button class="active">All</button>
                    </li>
                    <li id="btn-fence" class="rw-fence">
                        <button>Fences</button>
                    </li>
                    <li id="btn-deck" class="rw-deck">
                        <button>Decks</button>
                    </li>
                    <li id="btn-patios" class="rw-patios">
                        <button>Patios</button>
                    </li>
                    <li id="btn-landscaping" class="rw-landscaping">
                        <button>Landscaping</button>
                    </li>
                </ul>
            </div>
            <div class="rw-photo-container">
                <Image
                    src={FenceWork}
                    alt="Fence Work"
                    width={800}
                    height={600}
                    class="rw-fence-img"
                    id="fence-img-1"
                    quality="high"
                />
                <Image
                    src={Fence2}
                    alt="Fence 2"
                    width={800}
                    height={600}
                    class="rw-fence-img"
                    id="fence-img-2"
                    quality="high"
                />
                <Image
                    src={Fence3}
                    alt="Fence 3"
                    width={800}
                    height={600}
                    class="rw-fence-img"
                    id="fence-img-3"
                    quality="high"
                />
                <Image
                    src={Fence4}
                    alt="Fence 4"
                    width={800}
                    height={600}
                    class="rw-fence-img"
                    id="fence-img-4"
                    quality="high"
                />
                <Image
                    src={DeckWork}
                    alt="Deck Work"
                    width={800}
                    height={600}
                    class="rw-deck-img"
                    id="deck-img-1"
                    quality="high"
                />
                <Image
                    src={Deck2}
                    alt="Deck 2"
                    width={800}
                    height={600}
                    class="rw-deck-img"
                    id="deck-img-2"
                    quality="high"
                />
                <Image
                    src={Deck3}
                    alt="Deck 3"
                    width={800}
                    height={600}
                    class="rw-deck-img"
                    id="deck-img-3"
                    quality="high"
                />
                <Image
                    src={Deck4}
                    alt="Deck 4"
                    width={800}
                    height={600}
                    class="rw-deck-img"
                    id="deck-img-4"
                    quality="high"
                />
                <Image
                    src={Pergola1}
                    alt="Pergola 1"
                    width={800}
                    height={600}
                    class="rw-patio-img"
                    id="patio-img-1"
                    quality="high"
                />
                <Image
                    src={Patio1}
                    alt="Patio 1"
                    width={800}
                    height={600}
                    class="rw-patio-img visible"
                    id="patio-img-2"
                    quality="high"
                />
                <Image
                    src={Patio2}
                    alt="Patio 2"
                    width={800}
                    height={600}
                    class="rw-patio-img"
                    id="patio-img-3"
                    quality="high"
                />
                <Image
                    src={Patio3}
                    alt="Patio 3"
                    width={800}
                    height={600}
                    class="rw-patio-img"
                    id="patio-img-4"
                    quality="high"
                />
                <Image
                    src={Landscape1}
                    alt="Landscape 1"
                    width={800}
                    height={600}
                    class="rw-landscape-img"
                    id="landscape-img-1"
                    quality="high"
                />
                <Image
                    src={Landscape2}
                    alt="Landscape 2"
                    width={800}
                    height={600}
                    class="rw-landscape-img"
                    id="landscape-img-2"
                    quality="high"
                />
                <Image
                    src={Landscape3}
                    alt="Landscape 3"
                    width={800}
                    height={600}
                    class="rw-landscape-img"
                    id="landscape-img-3"
                    quality="high"
                />
                <Image
                    src={Landscape4}
                    alt="Landscape 4"
                    width={800}
                    height={600}
                    class="rw-landscape-img"
                    id="landscape-img-4"
                    quality="high"
                />
            </div>
            <div class="scroll-indicator"></div>
        </div>
    </div>
</section>

<style>
    .rw-photo-container :global(img) {
        width: 100%;
        height: auto;
        aspect-ratio: 4/3;
        object-fit: cover;
    }
</style>
