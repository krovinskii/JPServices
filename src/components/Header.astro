---
import facebookSVG from "../assets/facebook.svg";
import googleSVG from "../assets/google.svg";
import links from "../data/links.json";
import companyData from "../data/company.json";
import logo from "../assets/joseph-skin.webp";
import "../styles/styles.css";
---

<script src="../js/headerScroll.js"></script>
<script src="../js/hamburger.js"></script>
<header class="jps-header">
    <div class="jps-logo">
        <img class="jps-logo-icon" src={logo.src} alt="company logo" />
        <div class="jps-logo-text">
            <span class="jps-logo-name">{companyData.name}</span>
            <span class="jps-logo-tagline">{companyData.tagline}</span>
        </div>
    </div>

    <nav class="jps-nav" aria-label="Main navigation">
        <ul class="jps-nav-links">
            <li><a href={links.home}>Home</a></li>
            <li><a href={links.about}>About</a></li>

            <li><a href={links.gallery}>Our Work</a></li>
            <li><a href={links.contact}>Contact</a></li>
            <li><a href={links.blog}>Blog</a></li>
        </ul>

        <div class="mobile-phone">
            <span>
                Call us: <a
                    href={`tel:${companyData.phone}`}
                    aria-label={`Call us at ${companyData.phone}`}
                >
                    {companyData.phone}
                </a>
            </span>
        </div>

        <div class="jps-socials mobile-socials">
            <a href={companyData.socials.facebook} aria-label="Facebook">
                <img src={facebookSVG.src} alt="Facebook" />
            </a>
            <a href={companyData.socials.google} aria-label="Google">
                <img src={googleSVG.src} alt="Google" />
            </a>
        </div>
    </nav>
    <div class="jps-phone">
        <span>
            Call us: <a href={`tel:${companyData.phone}`}>
                {companyData.phone}
            </a>
        </span>
    </div>
    <div class="jps-socials desktop-socials">
        <a href={companyData.socials.facebook} aria-label="Facebook">
            <img src={facebookSVG.src} alt="Facebook" />
        </a>
        <a href={companyData.socials.google} aria-label="Google">
            <img src={googleSVG.src} alt="Google" />
        </a>
    </div>

    <button
        class="hamburger-menu"
        aria-label="Toggle menu"
        aria-expanded="false"
        aria-controls="mobile-nav"
    >
        <span class="hamburger-line"></span>
        <span class="hamburger-line"></span>
        <span class="hamburger-line"></span>
    </button>
</header>
