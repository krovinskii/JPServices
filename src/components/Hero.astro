---
import "../styles/styles.css";
import { Image } from "astro:assets";
import hero1 from "../assets/hero1.webp";
import hero2 from "../assets/hero2.webp";
import hero3 from "../assets/hero3.jpg";
---

<script src="../js/headerHeight.js"></script>
<script src="../js/carousel.js"></script>
<script src="../js/content-cta-modal.js"></script>

<section class="jps-hero" aria-label="Hero Carousel">
    <div class="hero-carousel" role="region" aria-label="Project Highlights">
        <div
            class="hero-slide active"
            role="tabpanel"
            aria-label="Deck Construction"
        >
            <Image
                src={hero1}
                alt="Deck construction"
                width={1920}
                height={1080}
                quality="high"
            />
            <div class="jps-hero-text-container">
                <h1>Crafting the Perfect Deck for Your Home</h1>
                <p class="hero-subtitle">
                    Elevate Your Outdoor Space with Expert Craftsmanship and
                    Quality Materials.
                </p>
                <button
                    class="hero-btn open-modal-btn"
                    aria-label="Request a free quote for deck construction"
                >
                    Get a Free Quote
                </button>
            </div>
        </div>
        <div class="hero-slide" role="tabpanel" aria-label="Fence Installation">
            <Image
                src={hero2}
                alt="Fence installation"
                width={1920}
                height={1080}
                quality="high"
            />
            <div class="jps-hero-text-container">
                <h1>Your Yard, Your Sanctuary</h1>
                <p class="hero-subtitle">
                    Block out noise and nosy neighbors with a fence built for
                    peace.
                </p>
                <button
                    class="hero-btn open-modal-btn"
                    aria-label="Request a free quote for fence installation"
                >
                    Get a Free Quote
                </button>
            </div>
        </div>
        <div class="hero-slide" role="tabpanel" aria-label="Outdoor Living">
            <Image
                src={hero3}
                alt="Outdoor living space"
                width={1920}
                height={1080}
                quality="high"
            />
            <div class="jps-hero-text-container">
                <h1>Luxury & Comfort, Right at Home</h1>
                <p class="hero-subtitle">
                    Create a peaceful escape just steps from your door.
                </p>
                <button
                    class="hero-btn open-modal-btn"
                    aria-label="Request a free quote for outdoor living space"
                >
                    Get a Free Quote
                </button>
            </div>
        </div>
    </div>
</section>

<div
    class="modal-overlay"
    id="modal"
    role="dialog"
    aria-labelledby="modalTitle"
    aria-modal="true"
    hidden
>
    <div class="modal-content">
        <button class="close-modal" id="closeModalBtn" aria-label="Close modal">
            &times;
        </button>
        <h2 id="modalTitle">Request a Free Quote</h2>
        <form id="content-cta-form" role="form">
            <div class="form-group">
                <label for="content-cta-form-name">Your Name</label>
                <input
                    type="text"
                    id="content-cta-form-name"
                    name="name"
                    required
                    aria-required="true"
                />
            </div>
            <div class="form-group">
                <label for="content-cta-form-email">Your Email</label>
                <input
                    type="email"
                    id="content-cta-form-email"
                    name="email"
                    required
                    aria-required="true"
                />
            </div>
            <div class="form-group">
                <label for="content-cta-form-phone">Your Phone Number</label>
                <input
                    type="tel"
                    id="content-cta-form-phone"
                    name="phone"
                    required
                    aria-required="true"
                />
            </div>
            <div class="form-group">
                <label for="content-cta-form-details">Project Details</label>
                <textarea
                    id="content-cta-form-details"
                    name="details"
                    required
                    aria-required="true"
                >
                </textarea>
            </div>
            <button type="submit" class="submit-btn">
                Submit Quote Request
            </button>
            <p
                id="content-cta-form-message"
                class="form-message"
                role="alert"
                aria-live="polite"
            >
            </p>
        </form>
    </div>
</div>
